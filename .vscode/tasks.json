{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build violin",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "gcc $(find Source -name '*.c') -I Headers -g -o violin"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
